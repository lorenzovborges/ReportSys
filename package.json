{
  "name": "reportsys",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "vitest run apps packages --config vitest.config.ts",
    "test:integration": "node tests/integration/run-default-flow.mjs",
    "test:integration:flags": "node tests/integration/run-flags-flow.mjs",
    "test:integration:noop": "node tests/integration/run-noop-flow.mjs",
    "test:perf": "tsx tests/perf/report-benchmark.ts",
    "test:coverage": "vitest run apps packages --coverage --config vitest.config.ts && node tests/coverage/check-thresholds.mjs",
    "test:all": "npm run typecheck && npm run test:unit && npm run test:integration && npm run test:integration:flags && npm run test:integration:noop",
    "dev:api": "npm --workspace @reportsys/api run dev",
    "dev:worker": "npm --workspace @reportsys/worker run dev",
    "dev": "concurrently -k \"npm run dev:api\" \"npm run dev:worker\"",
    "start:api": "npm --workspace @reportsys/api run start",
    "start:worker": "npm --workspace @reportsys/worker run start"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@types/archiver": "^6.0.3",
    "@types/pdfkit": "^0.17.3",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  }
}
